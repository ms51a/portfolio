<body class="">
  <header class="py-6 ">
    <div class="container mx-auto flex justify-between items-center px-8 md:px-14 lg:px-24 w-full">
    <div>Capsel toy</div>
    <div>
    <a href="#login">ログイン</a>

    <label class="btn btn-circle swap swap-rotate">
    <!-- this hidden checkbox controls the state -->
    <input type="checkbox" />
    <!-- hamburger icon -->
    <svg class="swap-off fill-current" xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 512 512"><path d="M64,384H448V341.33H64Zm0-106.67H448V234.67H64ZM64,128v42.67H448V128Z"/></svg>
    <!-- close icon -->
    <svg class="swap-on fill-current" xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 512 512"><polygon points="400 145.49 366.51 112 256 222.51 145.49 112 112 145.49 222.51 256 112 366.51 145.49 400 256 289.49 366.51 400 400 366.51 289.49 256 400 145.49"/></svg>
    </label>
  
    </div>
    </div>
  </header>

  <%= form_with model: @post do |f| %>

  <div class="mb-3">
  <%= f.label :gacha_date, "いつ出会った？" %>
  <%= f.text_area :gacha_date, class: "ytext-yellow-500", placeholder: "daisyUI仮置き" %>
  </div>

  <div class="mb-3">
    <%= f.label :gacha_place, "どこで出会った？" %>
    <%= f.text_field :gacha_place, class: "ytext-yellow-500", placeholder: "daisyUI仮置き" %>
  </div>

  <div class="mb-3">
    <%= f.label :ひとことどうぞ！ %>
    <%= f.text_area :body, class: "ytext-yellow-500", placeholder: "daisyUI仮置き" %>
  </div>
  <button class="btn btn-outline btn-warning">投稿する
  </button>
  <% end %>

  <% if user_signed_in? %>
  <%= button_to "ログアウト", destroy_user_session_path, method: :delete, class: "btn btn-outline btn-secondary" %>
          <li><%= link_to 'Logout', destroy_user_session_path, method: :delete %></li>
        <% else %>
          <li><%= link_to 'Sign up', new_user_registration_path %></li>
          <li><%= link_to 'Login', new_user_session_path %></li>
        <% end %>
</body>

  